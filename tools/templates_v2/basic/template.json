{
  "name": "basic",
  "version": "2.0.0",
  "description": "基础NetBox项目模板 - 最小可工作的项目",
  "level": 1,
  "complexity": "low",
  "build_time": "10s",
  "use_cases": ["学习", "原型开发", "快速验证"],
  
  "features": {
    "framework": "minimal",
    "networking": false,
    "plugins": false,
    "database": false,
    "logging": "basic",
    "testing": "simple",
    "documentation": "basic"
  },
  
  "files": [
    {
      "path": "src/main.cpp",
      "type": "source",
      "required": true,
      "description": "主程序入口"
    },
    {
      "path": "include/netbox/NetBox.h",
      "type": "header",
      "required": true,
      "description": "框架头文件"
    },
    {
      "path": "CMakeLists.txt",
      "type": "build",
      "required": true,
      "description": "构建配置"
    },
    {
      "path": "tests/simple_test.cpp",
      "type": "test",
      "required": false,
      "description": "基础测试"
    },
    {
      "path": "README.md",
      "type": "doc",
      "required": true,
      "description": "项目说明"
    }
  ],
  
  "dependencies": {
    "system": ["cmake", "make", "g++"],
    "libraries": [],
    "optional": []
  },
  
  "commands": {
    "build": ["mkdir build", "cd build", "cmake ..", "make"],
    "test": ["cd build", "ctest"],
    "run": ["cd build/bin", "./{{project_name}}"],
    "clean": ["rm -rf build"]
  },
  
  "next_steps": [
    "cd {{project_name}}",
    "mkdir build && cd build",
    "cmake ..",
    "make",
    "./bin/{{project_name}}"
  ]
}
