{
  "templates": {
    "default": {
      "name": "默认模板",
      "description": "标准的NetBox项目模板",
      "author": "SGLY",
      "version": "1.0.0",
      "license": "MIT",
      "features": [
        "logging",
        "testing",
        "examples",
        "documentation"
      ],
      "dependencies": [
        "cmake"
      ],
      "custom_variables": {
        "company_name": "Your Company",
        "project_description": "基于NetBox框架的网络应用",
        "contact_email": "your.email@example.com",
        "repository_url": "https://github.com/yourusername/yourproject",
        "keywords": [
          "network",
          "cpp",
          "framework"
        ],
        "target_platforms": [
          "linux",
          "windows",
          "macos"
        ]
      }
    },
    "web_server": {
      "name": "MyCustomWebServer",
      "description": "专门用于Web服务器开发的模板",
      "author": "张三",
      "version": "1.0.0",
      "license": "MIT",
      "features": [
        "http_server",
        "websocket",
        "ssl_support",
        "static_files"
      ],
      "dependencies": [
        "cmake",
        "openssl",
        "zlib"
      ],
      "custom_variables": {
        "company_name": "我的公司",
        "project_description": "基于NetBox框架的高性能Web服务器",
        "contact_email": "zhangsan@mycompany.com",
        "repository_url": "https://github.com/mycompany/mywebserver",
        "keywords": [
          "web",
          "server",
          "http",
          "websocket",
          "high-performance"
        ],
        "target_platforms": [
          "linux",
          "windows",
          "macos"
        ],
        "server_port": 3000,
        "max_connections": 5000,
        "enable_ssl": true,
        "static_path": "./static"
      }
    },
    "game_server": {
      "name": "MyGameServer",
      "description": "专门用于游戏服务器开发的模板",
      "author": "游戏开发团队",
      "version": "1.0.0",
      "license": "MIT",
      "features": [
        "real_time",
        "room_management",
        "player_sync",
        "game_logic"
      ],
      "dependencies": [
        "cmake",
        "protobuf"
      ],
      "custom_variables": {
        "company_name": "游戏工作室",
        "project_description": "基于NetBox框架的多人实时游戏服务器",
        "contact_email": "game@studio.com",
        "repository_url": "https://github.com/gamestudio/mygameserver",
        "keywords": [
          "game",
          "server",
          "real-time",
          "multiplayer",
          "room-based"
        ],
        "target_platforms": [
          "linux",
          "windows",
          "macos"
        ],
        "max_players_per_room": 20,
        "tick_rate": 120,
        "enable_cheat_detection": true,
        "game_type": "rpg"
      }
    }
  },
  "global_settings": {
    "default_template": "default",
    "auto_generate_docs": true,
    "include_tests": true,
    "include_examples": true,
    "git_init": true,
    "create_vscode_config": true
  },
  "customization": {
    "header_template": {
      "company_logo": "{{ company_name }}",
      "copyright_year": "{{ 'now' | date('%Y') }}",
      "license_header": "Copyright (c) {{ copyright_year }} {{ company_name }}. All rights reserved."
    },
    "cmake_template": {
      "cxx_standard": "17",
      "build_type": "Release",
      "enable_testing": true,
      "enable_coverage": false
    },
    "readme_template": {
      "badges": [
        "![NetBox](https://img.shields.io/badge/NetBox-Framework-blue)",
        "![C++](https://img.shields.io/badge/C%2B%2B-17-blue)",
        "![License](https://img.shields.io/badge/License-MIT-green)"
      ],
      "sections": [
        "项目简介",
        "功能特性",
        "快速开始",
        "API文档",
        "贡献指南",
        "许可证"
      ]
    }
  }
}