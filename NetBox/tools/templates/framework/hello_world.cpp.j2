#include <iostream>
#include <string>

{% if enable_colors %}
// ANSI颜色代码
#define RESET   "\033[0m"
#define RED     "\033[31m"
#define GREEN   "\033[32m"
#define YELLOW  "\033[33m"
#define BLUE    "\033[34m"
#define MAGENTA "\033[35m"
#define CYAN    "\033[36m"
{% endif %}

int main() {
    {% if enable_colors %}
    std::cout << CYAN << "🌟 " << RESET;
    {% endif %}
    std::cout << "Hello from {{ project_name }}!" << std::endl;
    
    {% if show_info %}
    std::cout << std::endl;
    std::cout << "📋 项目信息:" << std::endl;
    std::cout << "   名称: {{ project_name }}" << std::endl;
    std::cout << "   版本: {{ version }}" << std::endl;
    std::cout << "   作者: {{ author }}" << std::endl;
    std::cout << "   日期: {{ date }}" << std::endl;
    {% endif %}
    
    {% if features %}
    std::cout << std::endl;
    {% if enable_colors %}
    std::cout << GREEN << "✅ " << RESET;
    {% endif %}
    std::cout << "启用的特性:" << std::endl;
    {% for feature in features %}
    std::cout << "   - {{ feature | title }}" << std::endl;
    {% endfor %}
    {% endif %}
    
    {% if enable_interactive %}
    std::cout << std::endl;
    std::cout << "请输入你的名字: ";
    std::string name;
    std::getline(std::cin, name);
    
    if (!name.empty()) {
        {% if enable_colors %}
        std::cout << YELLOW << "👋 " << RESET;
        {% endif %}
        std::cout << "你好, " << name << "! 欢迎使用 {{ project_name }}!" << std::endl;
    }
    {% endif %}
    
    {% if show_goodbye %}
    std::cout << std::endl;
    {% if enable_colors %}
    std::cout << MAGENTA << "🚀 " << RESET;
    {% endif %}
    std::cout << "{{ project_name }} 运行完成！" << std::endl;
    {% endif %}
    
    return 0;
}
