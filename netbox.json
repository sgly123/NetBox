{
  "project": {
    "name": "NetBox",
    "version": "1.0.0",
    "description": "跨平台高性能网络框架 - 100分脚手架级别",
    "author": "NetBox Team",
    "license": "MIT",
    "homepage": "https://github.com/netbox/netbox",
    "keywords": ["network", "cross-platform", "high-performance", "io-multiplexing"]
  },
  "build": {
    "default_type": "Release",
    "parallel_jobs": 4,
    "enable_tests": true,
    "enable_benchmarks": true,
    "enable_examples": true,
    "enable_docs": true,
    "cmake_options": {
      "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
      "CMAKE_BUILD_TYPE": "Release"
    }
  },
  "platforms": {
    "windows": {
      "enabled": true,
      "compiler": "msvc",
      "min_version": "Windows 7",
      "architectures": ["x86", "x64", "ARM64"],
      "features": {
        "iocp": true,
        "winsock2": true,
        "visual_studio": "2019+"
      }
    },
    "linux": {
      "enabled": true,
      "compiler": "gcc",
      "min_version": "Linux 2.6+",
      "architectures": ["x86", "x64", "ARM", "ARM64"],
      "features": {
        "epoll": true,
        "so_reuseport": true,
        "tcp_nodelay": true
      }
    },
    "macos": {
      "enabled": true,
      "compiler": "clang",
      "min_version": "macOS 10.9+",
      "architectures": ["x64", "ARM64"],
      "features": {
        "kqueue": true,
        "bsd_socket": true,
        "grand_central_dispatch": true
      }
    }
  },
  "features": {
    "core": {
      "logging": {
        "enabled": true,
        "levels": ["DEBUG", "INFO", "WARN", "ERROR", "FATAL"],
        "outputs": ["console", "file", "syslog"]
      },
      "monitoring": {
        "enabled": true,
        "metrics": ["cpu", "memory", "network", "connections"],
        "exporters": ["prometheus", "json"]
      },
      "configuration": {
        "enabled": true,
        "formats": ["json", "yaml", "ini"],
        "hot_reload": true
      }
    },
    "network": {
      "ssl_support": {
        "enabled": false,
        "library": "openssl",
        "min_version": "1.1.1"
      },
      "http_support": {
        "enabled": false,
        "versions": ["1.1", "2.0"],
        "features": ["websocket", "compression"]
      },
      "protocols": {
        "tcp": true,
        "udp": true,
        "unix_socket": true
      }
    },
    "extensions": {
      "plugin_system": {
        "enabled": true,
        "dynamic_loading": true,
        "api_version": "1.0"
      },
      "scripting": {
        "enabled": false,
        "languages": ["lua", "python"]
      }
    }
  },
  "dependencies": {
    "required": {
      "cmake": ">=3.16",
      "compiler": {
        "gcc": ">=9.0",
        "clang": ">=10.0",
        "msvc": ">=2019"
      }
    },
    "optional": {
      "openssl": ">=1.1.1",
      "zlib": ">=1.2.11",
      "protobuf": ">=3.0"
    },
    "development": {
      "gtest": ">=1.10",
      "benchmark": ">=1.5",
      "doxygen": ">=1.8"
    }
  },
  "testing": {
    "unit_tests": {
      "enabled": true,
      "framework": "gtest",
      "coverage": true,
      "parallel": true
    },
    "integration_tests": {
      "enabled": true,
      "timeout": 300,
      "retry": 3
    },
    "performance_tests": {
      "enabled": true,
      "benchmarks": ["throughput", "latency", "memory"],
      "baseline": "previous_version"
    },
    "cross_platform_tests": {
      "enabled": true,
      "platforms": ["windows", "linux", "macos"],
      "architectures": ["x86", "x64", "ARM64"]
    }
  },
  "documentation": {
    "api_docs": {
      "enabled": true,
      "generator": "doxygen",
      "format": ["html", "pdf"]
    },
    "user_guide": {
      "enabled": true,
      "formats": ["markdown", "html"],
      "languages": ["en", "zh"]
    },
    "examples": {
      "enabled": true,
      "categories": ["basic", "advanced", "real-world"]
    }
  },
  "deployment": {
    "packaging": {
      "enabled": true,
      "formats": ["deb", "rpm", "msi", "dmg", "tar.gz"],
      "include_dependencies": false
    },
    "docker": {
      "enabled": true,
      "base_images": ["ubuntu:20.04", "alpine:3.14", "centos:8"],
      "multi_arch": true
    },
    "ci_cd": {
      "enabled": true,
      "platforms": ["github_actions", "gitlab_ci", "jenkins"],
      "auto_deploy": false
    }
  },
  "quality": {
    "code_analysis": {
      "enabled": true,
      "tools": ["clang-tidy", "cppcheck", "sonarqube"],
      "fail_on_warning": false
    },
    "security": {
      "enabled": true,
      "tools": ["valgrind", "sanitizers", "static_analysis"],
      "vulnerability_scan": true
    },
    "performance": {
      "enabled": true,
      "profiling": ["cpu", "memory", "io"],
      "optimization_level": "O2"
    }
  },
  "community": {
    "contributing": {
      "guidelines": "CONTRIBUTING.md",
      "code_of_conduct": "CODE_OF_CONDUCT.md",
      "issue_template": true,
      "pr_template": true
    },
    "support": {
      "documentation": "docs/",
      "examples": "examples/",
      "faq": "FAQ.md",
      "discord": "https://discord.gg/netbox"
    }
  },
  "metadata": {
    "created": "2024-08-03",
    "last_updated": "2024-08-03",
    "schema_version": "1.0",
    "generator": "netbox-cli",
    "checksum": "sha256:..."
  }
}
